<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_details_legislators"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cs571hw9.DetailsBillsActivity"
    tools:showIn="@layout/activity_details_bills">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:stretchColumns="0,1">

            <TableRow android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_span="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_info_bill_favorite"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>
            </TableRow>

            <TableRow android:paddingBottom="20dp">

                <TextView
                    android:layout_width="150dp"
                    android:textStyle="bold"
                    android:text="Bill ID:" />

                <TextView
                    android:id="@+id/textView_info_bill_id"
                    android:gravity="end" />
            </TableRow>

            <TableRow android:paddingBottom="20dp">

                <TextView
                    android:textStyle="bold"
                    android:text="Title:" />

                <TextView
                    android:id="@+id/textView_info_bill_title"
                    android:gravity="end" />
            </TableRow>

            <TableRow android:paddingBottom="20dp">

                <TextView
                    android:textStyle="bold"
                    android:text="Bill Type:" />

                <TextView
                    android:id="@+id/textView_info_bill_type"
                    android:gravity="end" />
            </TableRow>

            <TableRow android:paddingBottom="20dp">

                <TextView
                    android:textStyle="bold"
                    android:text="Sponsor:" />

                <TextView
                    android:id="@+id/textView_info_bill_sponsor"
                    android:gravity="end" />
            </TableRow>

            <TableRow android:paddingBottom="20dp">

                <TextView
                    android:textStyle="bold"
                    android:text="Chamber:" />

                <TextView
                    android:id="@+id/textView_info_bill_chamber"
                    android:gravity="end" />
            </TableRow>

            <TableRow android:paddingBottom="20dp">

                <TextView
                    android:textStyle="bold"
                    android:text="Status:" />

                <TextView
                    android:id="@+id/textView_info_bill_status"
                    android:gravity="end" />
            </TableRow>

            <TableRow android:paddingBottom="20dp">

                <TextView
                    android:textStyle="bold"
                    android:text="Introduced On:" />

                <TextView
                    android:id="@+id/textView_info_bill_intro_on"
                    android:gravity="end" />
            </TableRow>

            <TableRow android:paddingBottom="20dp">

                <TextView
                    android:textStyle="bold"
                    android:text="Congress URL:" />

                <TextView
                    android:id="@+id/textView_info_bill_congress_url"
                    android:gravity="end" />
            </TableRow>

            <TableRow android:paddingBottom="20dp">

                <TextView
                    android:textStyle="bold"
                    android:text="Version Status:" />

                <TextView
                    android:id="@+id/textView_info_bill_version_status"
                    android:gravity="end" />
            </TableRow>

            <TableRow android:paddingBottom="20dp">

                <TextView
                    android:textStyle="bold"
                    android:text="Bill URL:" />

                <TextView
                    android:id="@+id/textView_info_bill_url"
                    android:gravity="end" />
            </TableRow>

        </TableLayout>
    </ScrollView>
</RelativeLayout>







